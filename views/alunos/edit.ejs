<h1>Editar Aluno</h1>

<form action="/alunos/edit/<%= aluno.id %>" method="POST">

  <div class="form-group">
    <label for="nome">Nome:</label>
    <input type="text" class="form-control" id="nome" name="nome" value="<%= aluno.nome %>" required>
  </div>


  <div class="form-group">
    <label for="cursoId">Curso:</label>
    <select class="form-control" name="cursoId" id="cursoId" required>
      <% cursos.forEach(curso => { %>
        <option value="<%= curso.id %>" <%= curso.id === aluno.cursoId ? 'selected' : '' %>>
          <%= curso.nome %>
        </option>
      <% }) %>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Atualizar</button>

</form>
