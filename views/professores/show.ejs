<h1>Listar Professores</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% professores.forEach(professor => { %>
      <tr>
        <td><%= professor.id %></td>
        <td><%= professor.nome %></td>
        <td>
          <a href="/professores/edit/<%= professor.id %>" class="btn btn-warning btn-sm">Editar</a>
          <form action="/professores/delete/<%= professor.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/professores/add" class="btn btn-success">Adicionar Novo Professor</a>
